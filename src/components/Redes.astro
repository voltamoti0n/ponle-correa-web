<section id="redes" class="section-wrapper">
    <div class="section-content">
        <img src="/images/logo2.png" alt="#PONLECORREA" class="redes-logo">
        
        <div class="instagram-feed-container">
            <p style="padding: 2rem;">El widget de Instagram se mostrará aquí.</p>
        </div>

        <h3 class="siguenos-texto section-title">SÍGUENOS EN REDES</h3>

        <div class="social-icons-bottom">
            <!-- Facebook sin link -->
            <a href="#" aria-label="Facebook (próximamente)">
                <img src="/images/fb.png" alt="Facebook">
            </a>
            <!-- Instagram con link nuevo -->
            <a href="https://www.instagram.com/ponlecorrea" target="_blank" rel="noopener noreferrer">
                <img src="/images/instagram.png" alt="Instagram">
            </a>
            <!-- TikTok sin link -->
            <a href="#" aria-label="TikTok (próximamente)">
                <img src="/images/tiktok.png" alt="TikTok">
            </a>
        </div>
    </div>
</section>